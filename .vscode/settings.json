{
  "cSpell.words": ["clsx"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
    // "source.fixAll.stylelint": "explicit"
  },
  "prettier.enable": true,
  "files.associations": {
    "*.mdx": "markdown"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
